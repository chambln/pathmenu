IFS='
'

: "${TERMINAL:=xterm}" "${PAGER:=less}" "${VISUAL:=${EDITOR:=vi}}"

# shellcheck disable=2016
lscmd() {
    f=true
    for arg do [ -f "$arg" ] || f=false; done
    $f && printf '%s "$@"\n' \
        "$TERMINAL -e $PAGER" \
        "$TERMINAL -e $VISUAL"

    printf '%s\n' \
        'for f do xdg-open "$f"; done'

    if [ $# -eq 1 ]; then
        fmt='$1'
        printf '%s\n' \
            'ln -s $1 "$(dmenup)"' \
            'cp "$1" "$(dmenup)"'
    elif [ $# -gt 1 ]; then
        fmt='"$@"'
        printf '%s\n' \
            'ln -s "$@" "$(dmenup -d)"' \
            'cp "$@" "$(dmenup -d)"'
    fi

    printf "%s $fmt\\n" rm
}

dice() {
    for last do :; done
    case $# in
        0) return 1 ;;
        1) p=${1##*/} ;;
        2) p="${1##*/}, ${2##*/}" ;;
        3) p="${1##*/}, ${2##*/}, ${3##*/}" ;;
        4) p="${1##*/}, ${2##*/}, ${3##*/}, ${4##*/}" ;;
        *) p="${1##*/}, ${2##*/}, [$(($# - 3))â€¦], ${last##*/}"
    esac
    cmd=$(lscmd "$@" | dmenu -l 9 -p "$p") || return 1
    eval "$cmd"
}

# Word splitting is safe and intended here.
# shellcheck disable=2046
while dice $(dmenup "$@"); do cd "${last%/*}"; done
