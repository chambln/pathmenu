#!/usr/bin/env rc

fn iter {
    for (i in $*) @ {
        if (test -d $i && !~ $i . && cd $i) {
            $0 `{ la | dmenu -i -l 20 -p `pwd }
        } else realpath $i
    }
}

ifs = $nl
BASE_DIR=`pwd
fn pwd { realpath --relative-base=$BASE_DIR . }
fn la { printf %s\n . .. `ls }
if (~ $* ())
    iter ./
for (i in $*)
    ~ $i . && iter ./ || iter $i
